<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="iDMC" location="startMenu"/>
  <shortcut
    name="iDMC $APP_VER"
    target="java"
    commandLine="-jar iDmc-${APP_VER}.jar"
    workingDirectory="$INSTALL_PATH"
    description="Start iDMC $APP_VER"
    iconFile="${INSTALL_PATH}\logo_32x32.ico"
    iconIndex="0"
    initialState="noShow"
    programGroup="yes"
    desktop="yes"
    applications="no"
    type="Application"
    startMenu="no"
    startup="no">
    <createForPack name="Core program"/>
  </shortcut>
  <shortcut
     name="Uninstall iDMC $APP_VER"
     target="java"
     commandLine="-jar &quot;${INSTALL_PATH}/Uninstaller/uninstaller.jar&quot;"
     workingDirectory="$INSTALL_PATH"
     description="Uninstall iDMC $APP_VER"
     iconFile=""
     iconIndex="0"
     initialState="maximized"
     programGroup="yes"
     desktop="yes"
     applications="no"
     type="Application"
     startMenu="no"
     startup="no">
  <createForPack name="Core program" />
  </shortcut>
</shortcuts>
