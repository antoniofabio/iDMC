<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
  <programGroup defaultName="iDMC" location="applications"/>
  <shortcut
     name="iDMC ${APP_VER}"
     programGroup="no"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="/usr/bin/java"
     commandLine="-jar iDmc-${APP_VER}.jar"
     workingDirectory="$INSTALL_PATH"
     description="iDMC"
     iconFile="${INSTALL_PATH}/logo_32x32.png"
     iconIndex="0"
     type="Application"
     encoding="UTF-8"
     terminal="false"
     KdeSubstUID="false"
     categories="Office"
     initialState="normal">
    <createForPack name="Core program"/>
  </shortcut>
  <shortcut
     name="Uninstall iDMC $APP_VER"
     programGroup="no"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="/usr/bin/java"
     commandLine="-jar &quot;${INSTALL_PATH}/Uninstaller/uninstaller.jar&quot;"
     workingDirectory="$INSTALL_PATH"
     description="Uninstall iDMC $APP_VER"
     iconFile=""
     iconIndex="0"
     type="Application"
     encoding="UTF-8"
     terminal="false"
     KdeSubstUID="false"
     categories="Office"
     initialState="normal">
  <createForPack name="Core program" />
  </shortcut>

</shortcuts>
