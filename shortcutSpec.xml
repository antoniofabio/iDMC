<shortcuts>
  <!--<skipIfNotSupported/>-->
  <programGroup defaultName="iDMC" location="startMenu"/>
  <shortcut
    name="iDMC $APP_VER"
    target="java"
    commandLine="-jar iDmc-$APP_VER.jar"
    workingDirectory="$INSTALL_PATH"
    description="starts iDMC $APP_VER"
    iconFile=""
    iconIndex="0"
    initialState="maximized"
    programGroup="yes"
    desktop="yes"
    applications="no"
    type="Application"
    startMenu="no"
    startup="no">
    <createForPack name="Base"/>
  </shortcut>
  <shortcut
	   name="Uninstall iDMC $APP_VER"
	   target="java"
	   commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
	   workingDirectory="$INSTALL_PATH"
	   description="uninstall iDMC $APP_VER"
	   iconFile=""
	   iconIndex="0"
	   initialState="maximized"
	   programGroup="yes"
	   desktop="yes"
	   applications="no"
	   type="Application"
	   startMenu="no"
	   startup="no">
  <createForPack name="Base" />
  </shortcut>
</shortcuts>
