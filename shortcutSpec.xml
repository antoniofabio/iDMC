<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="iDMC\iDMC-$app-version" location="applications||startMenu"/>
  <shortcut
    name="iDMC 2.0.5"
    target="java"
    commandLine="-jar iDmc-$APP_VER.jar"
    workingDirectory="$INSTALL_PATH"
    description="starts iDMC $APP_VER"
    iconFile="$INSTALL_PATH\iDMC.ico"
    iconIndex="0"
    initialState="maximized"
    programGroup="yes||no"
    desktop="yes||no"
    applications="yes||no"
    startMenu="yes||no"
    startup="yes||no">
    <createForPack name="Base"/>
  </shortcut>
</shortcuts>
